@*@page "/login"*@
@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Owl.reCAPTCHA
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Public.Web.Security.Recaptcha
@using Volo.Abp.Account.Settings
@using Volo.Abp.Settings
@using OrdBaseApplication.Factory;
@model newPMS.Web.Pages.Account.CustomLoginModel
@inject IHtmlLocalizer<AccountResource> L
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout
@inject ISettingProvider SettingProvider
@inject IOrdAppFactory AppFactory
@{
    PageLayout.Content.Title = L["Login"].Value;
    var reCaptchaVersion = await SettingProvider.GetAsync<int>(AccountSettingNames.Captcha.Version);
    if (Model.UseCaptcha)
    {
        await Model.ReCaptchaOptions.SetAsync(reCaptchaVersion == 3 ? reCAPTCHAConsts.V3 : reCAPTCHAConsts.V2);
    }

    string urlPortal = AppFactory.AppSettingConfiguration.GetSection("UrlPortal").Value;
}

@section scripts
{
    <abp-script src="/Pages/Account/Index.js" />
    @if (Model.UseCaptcha)
    {
        if (reCaptchaVersion == 3)
        {
            <recaptcha-script-v3 />
            <recaptcha-script-v3-js action="login" callback="(function(){$('#@RecaptchaValidatorBase.RecaptchaResponseKey').val(token)})" />
        }
        else
        {
            <recaptcha-script-v2 />
        }
    }
}
@section styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="@Url.Content("~/wwwroot/libs/bootstrap/css/bootstrap-grid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Pages/Account/Index.css")" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/logo/logo-col.png" />
}

@if (Model.IsLinkLogin)
{
    <abp-alert alert-type="Warning">
        @L["LinkUserWarning", Url.PageLink()]
    </abp-alert>
}

<div class="row main login-form">
    <div class="content-login">


        <div class="col-lg-12 col-sm-12 col-12 right">
            <div class="img-r">
                <img src="~/images/logo/logo.png" alt="">
            </div>
            <div class="bg-form">
                <h2>Đăng nhập</h2>
                <div class="account-module-form ">
                    @if (Model.EnableLocalLogin)
                    {
                        <form method="post">
                            <input asp-for="ReturnUrl" />
                            @*<p>@Model.ReturnUrl</p>*@
                            <input asp-for="ReturnUrlHash" />
                            @if (Model.UseCaptcha)
                            {
                                <input type="hidden" name="@RecaptchaValidatorBase.RecaptchaResponseKey" id="@RecaptchaValidatorBase.RecaptchaResponseKey" />
                            }
                            <abp-input style="background-color: #FFF !important" label="Tên đăng nhập" asp-for="LoginInput.UserNameOrEmailAddress" required-symbol="false" />
                            <abp-input style="background-color: #FFF !important" label="Mật khẩu" asp-for="LoginInput.Password" required-symbol="false" />
                            <abp-row style=" margin: 0 auto; max-width: 600px;" class="login-remember">
                                <abp-column style="padding: 0">
                                    <abp-input label="Lưu đăng nhập" asp-for="LoginInput.RememberMe" class="mb-4" />
                                </abp-column>
                                <abp-column class="text-right forgot-pass">
                                    <a style="color: #5FA11D; font-weight: bold;" href="@Url.Page("./ForgotPassword", new { returnUrl = Model.ReturnUrl, returnUrlHash = Model.ReturnUrlHash })">Quên mật khẩu?</a>
                                </abp-column>
                            </abp-row>

                            @if (reCaptchaVersion == 2)
                            {
                                <recaptcha-div-v2 callback="(function(){$('#@RecaptchaValidatorBase.RecaptchaResponseKey').val(token)})" />
                            }
                            <abp-button button-type="Primary" style=" margin: 20px auto 0;background: #5FA11D " size="Block" type="submit" class="login-btn mt-2 mb-3" name="Action" value="Login">
                                Đăng nhập
                            </abp-button>

                            @*<button class="g-recaptcha"
                                        data-sitekey="6Le3H7cZAAAAADcLtPiGzWNi0wuGLic1b6OIX8h3"
                                        data-callback='onSubmit'
                                        data-action='submit'>
                                    Submit
                                </button>*@
                            @*@if (Model.ShowCancelButton)
                                {
                                    <abp-button button-type="Secondary" size="Block" type="submit" formnovalidate="formnovalidate" class="mt-2 mb-3" name="Action" value="Cancel">@L["Cancel"]</abp-button>
                                }*@
                        </form>
                        if (Model.IsSelfRegistrationEnabled)
                        {
                            <div class="text-regiter row" style="max-width: 600px; margin: 0 auto; justify-content: space-between">
                                <div class="col-sm-4 col-4 item">
                                    <img src="~/images/logo/Edit.png" />
                                    <a href="/Customer/Register">Đăng ký ngay</a>
                                    @*<a href="@Url.Page("./Register", new {returnUrl = Model.ReturnUrl, returnUrlHash = Model.ReturnUrlHash})">Đăng ký ngay</a>*@
                                </div>
                                <div class="col-sm-4 col-4 item">
                                    <img src="~/images/logo/Video.png" />
                                    <a href="">Video hướng dẫn</a>
                                </div>
                                <div class="col-sm-4 col-4 item">
                                    <img src="~/images/logo/Paper.png" />
                                    <a href="@urlPortal/vi/faqs/">Vấn đề thường gặp</a>
                                </div>
                            </div>
                        }
                    }

                    @if (Model.VisibleExternalProviders.Any())
                    {
                        <hr />
                        @L["OrSignInWith"]<br />
                        <form asp-page="./Login" asp-page-handler="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-returnUrlHash="@Model.ReturnUrlHash" method="post">
                            <input asp-for="ReturnUrl" />
                            <input asp-for="ReturnUrlHash" />
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <button type="submit"
                                        class="mt-2 mr-2 btn btn-outline-primary btn-sm"
                                        name="provider"
                                        value="@provider.AuthenticationScheme"
                                        data-busy-text="@L["ProcessingWithThreeDot"]">
                                    @if (provider.Icon != null)
                                    {
                                        <i class="@provider.Icon"></i>
                                    }
                                    <span>@provider.DisplayName</span>
                                </button>
                            }
                        </form>
                    }

                    @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
                    {
                        <div class="alert alert-warning">
                            <strong>Invalid login request</strong>
                            There are no login schemes configured for this client.
                        </div>
                    }
                </div>
            </div>

        </div>
        <article>Copyright @@ 2020. <strong> Trung tâm kiểm chuẩn chất lượng xét nghiệm - Trường Đại học Y Hà Nội</strong></article>
    </div>
</div>